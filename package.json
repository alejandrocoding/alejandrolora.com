{
  "name": "app",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod --aot",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "i18n": "ng xi18n --output-path src/i18n",
    "translations": "for lang in en es; do ng build --output-path=dist/$lang --aot --prod --i18n-file=src/i18n/messages.$lang.xlf --i18n-format=xlf --locale=$lang; done",
    "production": "npm run production:english && npm run production:languages",
    "production:english": "ng build --output-path=dist --aot --prod --bh / --i18n-file=src/i18n/messages.en.xlf --i18n-format=xlf --locale=en",
    "production:languages": "for lang in es; do ng build --output-path=dist/$lang --aot --prod --bh /$lang/ --i18n-file=src/i18n/messages.$lang.xlf --i18n-format=xlf --locale=$lang; done",
    "restore:db": "firebase firestore:delete --project website-b882d --all-collections"
  },
  "private": true,
  "author": {
    "name": "Alejandro Lora",
    "url": "http://alejandrolora.com",
    "email": "alejandrofpo@gmail.com"
  },
  "dependencies": {
    "@angular/animations": "5.2.0",
    "@angular/cdk": "5.0.4",
    "@angular/common": "5.1.0",
    "@angular/compiler": "5.1.0",
    "@angular/core": "5.1.0",
    "@angular/flex-layout": "2.0.0-beta.12",
    "@angular/forms": "5.1.0",
    "@angular/http": "5.1.0",
    "@angular/material": "5.0.4",
    "@angular/platform-browser": "5.1.0",
    "@angular/platform-browser-dynamic": "5.1.0",
    "@angular/router": "5.1.0",
    "angularfire2": "^5.0.0-rc.6",
    "core-js": "2.4.1",
    "firebase": "4.9.0",
    "hammerjs": "2.0.8",
    "rxjs": "5.5.2",
    "zone.js": "0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "1.6.6",
    "@angular/compiler-cli": "5.1.0",
    "@angular/language-service": "5.1.0",
    "@types/jasmine": "2.8.3",
    "@types/jasminewd2": "2.0.2",
    "@types/node": "6.0.60",
    "codelyzer": "4.0.1",
    "jasmine-core": "2.8.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "2.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "1.2.1",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-html-reporter": "0.2.2",
    "protractor": "5.1.2",
    "ts-node": "3.2.0",
    "tslint": "5.9.1",
    "typescript": "2.5.3"
  }
}
